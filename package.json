{
  "name": "game.io",
  "version": "0.1.0",
  "engines": {
    "node": "8.9.3"
  },
  "description": "An HTML5 game",
  "main": "",
  "scripts": {
    "test": "mocha --recursive",
    "dev": "concurrently --kill-others \"nodemon --exitcrash -w server -w app-configs.js server/server.js\" \"webpack-dev-server -d --open --content-base dist/\"",
    "dev:client": "webpack-dev-server -d --open --content-base dist/",
    "dev:server": "nodemon --exitcrash -w server -w app-configs.js server/server.js",
    "build:dev": "webpack --progress --colors",
    "build:prod": "webpack -p --progress --colors",
    "heroku:publish": "npm run build:prod && git add dist && git commit -m \"build dist for publish to heroku\" && git push heroku master",
    "heroku:off": "heroku ps:scale web=0",
    "heroku:on": "heroku ps:scale web=1",
    "lint:fix": "eslint . --fix"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ]
  },
  "author": "JttWest",
  "license": "ISC",
  "repository": "placeholder.com",
  "dependencies": {
    "axios": "^0.17.1",
    "bufferutil": "^3.0.2",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "http-status-codes": "^1.3.0",
    "jquery": "^3.2.1",
    "semantic-ui": "^2.2.13",
    "utf-8-validate": "^3.0.3",
    "uuid": "^3.1.0",
    "ws": "^3.3.3"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.0",
    "circular-dependency-plugin": "^3.0.0",
    "concurrently": "^3.5.0",
    "css-loader": "^0.28.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.1.0",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.28.0",
    "mocha": "^3.3.0",
    "nodemon": "^1.13.3",
    "style-loader": "^0.18.2",
    "url-loader": "^0.6.2",
    "webpack": "^3.3.0",
    "webpack-dev-server": "^2.5.1"
  }
}
